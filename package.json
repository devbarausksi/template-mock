{
  "scripts": {
    "build": "npx tsc",
    "prebuild": "rimraf dist/",
    "postbuild": "copyfiles -u 1 graphql/* dist/graphql",
    "start": "node dist/index.js",
    "watch": "npx nodemon --exec \"npm run postbuild && npm run start\"",
    "dev": "npx concurrently \"npm run codegen:watch\" \"npm run build -- --watch\" \"npm run watch\"",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --config codegen.ts --watch",
    "prepare": "husky install",
    "db:push": "prisma db push --force-reset",
    "db:seed": "prisma db seed",
    "db:reset": "npm run db:push && npm run db:seed"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "@graphql-tools/schema": "^10.0.0",
    "@prisma/client": "^5.6.0",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "morgan": "^1.10.0",
    "prisma": "^5.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@parcel/watcher": "^2.3.0",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.3",
    "copyfiles": "^2.4.1",
    "devmoji": "^2.3.0",
    "husky": "^8.0.0",
    "prisma-erd-generator": "^1.11.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "seed": "tsc --allowJs prisma/seed.ts && cat prisma/seed.js | node && rm prisma/seed.js"
  },
  "nodemonConfig": {
    "watch": [
      "graphql",
      "src"
    ],
    "ext": "graphql,ts,js"
  }
}
